<Save>:
    ScreenFrame:
        BoxLayout:
            orientation: 'vertical'
            cols: 4
            size_hint: 1, 1

            id: container

            Label:
                text: 'Операторские продажи'
            TextInput:
                text: ''
                input_filter: 'int'
                id: text_0
                multiline: False

            Label:
                text: 'ЗАМЕР ДО СЛИВА (см)'
            TextInput:
                text: ''
                input_filter: 'int'
                id: text_1
                multiline: False


            Label:
                text: 'ОБЪЕМ БЕНЗОВОЗА (л)'
            TextInput:
                text: ''
                input_filter: 'int'
                id: text_2
                multiline: False


            Label:
                text: 'ЗАМЕР ПОСЛЕ СЛИВА (см)'
            TextInput:
                text: ''
                input_filter: 'int'
                id: text_3
                multiline: False


            Label:
                text: 'ПОКАЗАНИЯ СЧЁТЧИКА'
            TextInput:
                text: ''
                input_filter: 'int'
                id: text_4
                multiline: False

            Button:
                text: "ЗАПИСАТЬ В БАЗУ"
                on_press: root.send_to_server(text_0, text_1, text_2, text_3, text_4)
                on_release: root.clear_inputs()
                on_press: app.root.current = 'finish'


<Finish>:
    ScreenFrame:
        BoxLayout:
            Label:
                text: "НОВАЯ ЗАПИСЬ ДОБАВЛЕНА УСПЕШНО"
