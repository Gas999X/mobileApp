<ScreenFrame>:
    orientation: 'vertical'
    cols: 2

    ActionBar:
        ActionView:
            pos_hint: {'top':1}
            use_separator: True
            ActionPrevious:
                title: "Семь раз замерь, один раз залей"
                with_previous: False
            ActionButton:
                text: "Настройки"
    BoxLayout:
        orientation: 'vertical'
        cols: 2
        size_hint: 1, 0.30
        Button:
            text: "ИСТОРИЯ"
        BoxLayout:
            orientation: 'horizontal'
            cols: 2
            size_hint: 1, 1

            Button:

                text: "ХЛЕБЗАВОД"
                on_release: root.XZ()

            Button:

                text: "ДАЧНАЯ"
                on_release: root.dacha()

<Start_Screen>:
    ScreenFrame:
        BoxLayout:
            Label:
                text: "Связь с сервером"
            Label:
                text: "???????"
                id: on_off
            Button:
                text: "ОБНОВИТЬ"
                on_release: root.call_base(on_off)
<XZ_Screen>:
    ScreenFrame:
        BoxLayout:
            orientation: 'vertical'
            cols: 2
            size_hint: 1, 1

            BoxLayout:
                orientation: 'horizontal'
                cols: 1
                size_hint: 1, 1

                Button:
                    text: "1 - 92\n\n25m2"
                    id: zavod1
                    on_press: root.zavod1(zavod1)
                    on_press: app.root.current = 'save'
                Button:
                    text: "2 - 92\n\n25m2"
                    id: zavod2
                    on_press: root.zavod2(zavod2)
                    on_press: app.root.current = 'save'

            BoxLayout:
                orientation: 'horizontal'
                cols: 1
                size_hint: 1, 1

                Button:
                    text: "3 - 95\n\n15m2"
                    id: zavod3
                    on_press: root.zavod3(zavod3)
                    on_press: app.root.current = 'save'
                Button:
                    text: "5 - ДТ\n\n15m2"
                    id: zavod5
                    on_press: root.zavod5(zavod5)
                    on_press: app.root.current = 'save'

            BoxLayout:
                orientation: 'horizontal'
                cols: 1
                size_hint: 1, 1

                Button:
                    text: "4 - 95\n\n10m2"
                    id: zavod4
                    on_press: root.zavod4(zavod4)
